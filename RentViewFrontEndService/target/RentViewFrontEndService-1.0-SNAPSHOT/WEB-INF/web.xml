<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>FrontEndServlet</servlet-name>
        <servlet-class>com.ryerson.rentviewfrontendservice.Frontend.FrontEndServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.ryerson.rentviewfrontendservice.Frontend.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>IndexServlet</servlet-name>
        <servlet-class>com.ryerson.rentviewfrontendservice.Frontend.IndexServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MovieManagementServlet</servlet-name>
        <servlet-class>com.ryerson.rentviewfrontendservice.Frontend.MovieManagementServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RentMovieServlet</servlet-name>
        <servlet-class>com.ryerson.rentviewfrontendservice.Frontend.RentMovieServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserManagementServlet</servlet-name>
        <servlet-class>com.ryerson.rentviewfrontendservice.Frontend.UserManagementServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManagerServlet</servlet-name>
        <servlet-class>com.ryerson.rentviewfrontendservice.Frontend.ManagerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SubmitReviewServlet</servlet-name>
        <servlet-class>com.ryerson.rentviewfrontendservice.Frontend.SubmitReviewServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FrontEndServlet</servlet-name>
        <url-pattern>/FrontEndServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IndexServlet</servlet-name>
        <url-pattern>/IndexServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MovieManagementServlet</servlet-name>
        <url-pattern>/MovieManagementServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RentMovieServlet</servlet-name>
        <url-pattern>/RentMovieServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserManagementServlet</servlet-name>
        <url-pattern>/UserManagementServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManagerServlet</servlet-name>
        <url-pattern>/ManagerServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SubmitReviewServlet</servlet-name>
        <url-pattern>/SubmitReviewServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
